        <button id="mobile-menu-button" class="md:hidden p-2 rounded-full hover:bg-bg-secondary transition-colors">
          <i class="fas fa-bars text-text-secondary text-xl"></i>
        </button>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="md:hidden hidden mt-4 pb-2 rounded-2xl bg-bg-secondary/95 backdrop-blur-md shadow-soft p-4 absolute left-4 right-4 top-16 border border-border-color">
        <div class="flex flex-col space-y-2">
          <a href="#home" class="px-4 py-3 font-medium text-text-secondary hover:text-primary transition-colors hover:bg-primary/10 rounded-lg">Home</a>
          <a href="#skills" class="px-4 py-3 font-medium text-text-secondary hover:text-primary transition-colors hover:bg-primary/10 rounded-lg">Skills</a>
