<!-- Contact Section -->
<section id="contact" class="py-24 bg-bg-secondary">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-1 bg-primary/20 rounded-full text-primary font-medium text-sm mb-4 mx-auto animate-on-scroll">
        <span class="flex items-center">
          <span class="w-2 h-2 bg-primary rounded-full mr-2"></span>
          Let's Connect
        </span>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-6 animate-on-scroll" style="animation-delay: 0.1s">Get In <span class="bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">Touch</span></h2>
      <p class="text-text-secondary max-w-2xl mx-auto animate-on-scroll" style="animation-delay: 0.2s">Have a project in mind or want to collaborate? I'd love to hear from you!</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Contact Info -->
      <div class="lg:col-span-1 animate-on-scroll" style="animation-delay: 0.3s">
        <div class="bg-bg-color border border-border-color rounded-2xl shadow-soft p-8 hover-lift">
          <h3 class="text-xl font-display font-bold mb-6 text-text-color">Contact Information</h3>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center flex-shrink-0">
                <i class="fas fa-envelope text-primary"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-color">Email</h4>
                <a href="mailto:thetardie@gmail.com" class="text-text-secondary hover:text-primary transition-colors">thetardie@gmail.com</a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl bg-secondary/20 flex items-center justify-center flex-shrink-0">
                <i class="fas fa-map-marker-alt text-secondary"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-color">Location</h4>
                <p class="text-text-secondary">Nepal</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl bg-accent/20 flex items-center justify-center flex-shrink-0">
                <i class="fab fa-instagram text-accent"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-color">Instagram</h4>
                <a href="https://instagram.com/gd_tardie" class="text-text-secondary hover:text-accent transition-colors" target="_blank">@gd_tardie</a>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h4 class="font-bold text-text-color mb-4">Follow Me</h4>
            <div class="flex space-x-4">
              <a href="https://instagram.com/gd_tardie" class="w-10 h-10 rounded-full bg-bg-secondary border border-border-color flex items-center justify-center hover:bg-primary/10 hover:text-primary transition-colors" target="_blank">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-bg-secondary border border-border-color flex items-center justify-center hover:bg-secondary/10 hover:text-secondary transition-colors">
                <i class="fab fa-behance"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-bg-secondary border border-border-color flex items-center justify-center hover:bg-accent/10 hover:text-accent transition-colors">
                <i class="fab fa-youtube"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-bg-secondary border border-border-color flex items-center justify-center hover:bg-tertiary-color/10 hover:text-tertiary-color transition-colors">
                <i class="fab fa-linkedin"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2 animate-on-scroll" style="animation-delay: 0.4s">
        <div class="bg-bg-color border border-border-color rounded-2xl shadow-soft p-8 hover-lift">
          <h3 class="text-xl font-display font-bold mb-6 text-text-color">Send Me a Message</h3>

          <form action="#" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-text-secondary mb-2">Your Name</label>
                <input type="text" id="name" name="name" placeholder="John Doe" class="w-full px-4 py-3 rounded-xl bg-bg-secondary border border-border-color text-text-color placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors">
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-text-secondary mb-2">Your Email</label>
                <input type="email" id="email" name="email" placeholder="john@example.com" class="w-full px-4 py-3 rounded-xl bg-bg-secondary border border-border-color text-text-color placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors">
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-text-secondary mb-2">Subject</label>
              <input type="text" id="subject" name="subject" placeholder="Project Inquiry" class="w-full px-4 py-3 rounded-xl bg-bg-secondary border border-border-color text-text-color placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors">
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-text-secondary mb-2">Your Message</label>
              <textarea id="message" name="message" rows="5" placeholder="Hello, I'd like to talk about..." class="w-full px-4 py-3 rounded-xl bg-bg-secondary border border-border-color text-text-color placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors"></textarea>
            </div>

            <button type="submit" class="group px-8 py-4 bg-gradient-to-r from-primary to-secondary text-white font-medium rounded-full transition-all shadow-button hover:shadow-glow hover:-translate-y-1 w-full md:w-auto">
              <span class="flex items-center justify-center">
                <span>Send Message</span>
                <i class="fas fa-paper-plane ml-2 text-sm transition-transform group-hover:translate-x-1"></i>
              </span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
